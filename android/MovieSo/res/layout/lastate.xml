<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:gravity="center">
    	<TextView android:textSize="30sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textstate" android:text=" "/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:gravity="center">
    	<Button android:id="@+id/refstatebutton" android:layout_width="300dip" android:layout_height="50dip" android:text="刷新" android:textSize="30sp"/>
    </LinearLayout>
</LinearLayout>
